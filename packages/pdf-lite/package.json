{
    "name": "pdf-lite",
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "default": "./dist/*"
        }
    },
    "scripts": {
        "test:acceptance": "vitest run test/acceptance",
        "test:unit": "vitest run test/unit",
        "test": "vitest run",
        "compile": "pnpm compile:validate && tsc -p tsconfig.prod.json",
        "compile:validate": "tsc -p tsconfig.json --noEmit",
        "gen:pipe": "tsx ./scripts/gen-pipe.ts > src/pipe.ts",
        "watch": "tsc -watch -p ."
    },
    "keywords": [
        "pdf",
        "typescript",
        "browser",
        "nodejs",
        "zero-dependency",
        "type-safe",
        "pdf-parser",
        "pdf-reader",
        "pdf-writer",
        "digital-signature",
        "encryption",
        "decryption"
    ],
    "author": "Jacob Shirley",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.19.17",
        "@types/pako": "^2.0.4",
        "@types/safe-json-stringify": "^1.1.5",
        "@vitest/browser-playwright": "^4.0.13",
        "@vitest/coverage-v8": "^4.0.14",
        "deep-object-diff": "^1.1.9",
        "diff": "^8.0.2",
        "fast-xml-parser": "^5.2.5",
        "file-type": "^21.0.0",
        "madge": "^8.0.0",
        "playwright": "^1.56.1",
        "safe-json-stringify": "^1.2.0",
        "typescript": "5.8.3",
        "vitest": "4.0.13"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/jacobshirley/pdf-lite.git"
    },
    "bugs": {
        "url": "https://github.com/jacobshirley/pdf-lite/issues"
    },
    "homepage": "https://jacobshirley.github.io/pdf-lite",
    "description": "A low-level, zero-dependency, type-safe PDF library for Node.js and the browser",
    "files": [
        "dist"
    ],
    "dependencies": {
        "pako": "2.1.0",
        "pki-lite": "^1.0.10",
        "pki-lite-crypto-extended": "^1.0.10"
    }
}
